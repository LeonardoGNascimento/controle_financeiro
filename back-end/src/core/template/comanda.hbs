<html lang='pt-br'>

  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Document</title>
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css'
      integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO'
      crossorigin='anonymous'
    />
    <style>
      *{ padding: 0; margin: 0; } body { padding: 1rem; } .termos { border: 1px
      solid black; padding: 1rem; } .cliente { font-size: 19px; } .assinatura {
      text-align: center; }

    </style>
  </head>

  <body>
    <div class='assinatura'>
      <table class='table'>
        <tbody>
          <tr>
            <td scope='col'><b>Descrição</b></th>
            <td scope='col'><b>Valor</b></th>
          </tr>
          {{#each dados}}
            <tr>
              <td class='m-5'>
                {{this.financeiroDescricao.descricao}}
              </td>
              <td>
                {{this.valor}}
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      Total: {{total}}
    </div>
  </body>

</html>